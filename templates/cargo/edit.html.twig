{% extends 'base.html.twig' %}

{% block title %}Modificar Cargo{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('sweetalert2') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('parsley') }}
    {{ encore_entry_script_tags('sweetalert2') }}
{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-12">
            <h2 class="ps-4">Modificar Cargo</h2>
        </div>
    </div>


    {{ include('cargo/_form.html.twig', {'button_label': 'Update'}) }}

    <div class="row my-3">
        <div class="col-2">
            <a class="btn btn-primary w-100" href="{{ path('cargo_index') }}">Volver a la lista</a>
        </div>
    </div>
    {% if is_granted('ROLE_ADMINISTRADOR') %}
        {{ include('cargo/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
