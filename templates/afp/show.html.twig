{% extends 'base.html.twig' %}

{% block title %}Afp{% endblock %}

{% block content %}
    <h1>Afp</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ afp.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ afp.nombre }}</td>
            </tr>
            <tr>
                <th>Contacto</th>
                <td>{{ afp.contacto }}</td>
            </tr>
            <tr>
                <th>Telefono</th>
                <td>{{ afp.telefono }}</td>
            </tr>
            <tr>
                <th>Extension</th>
                <td>{{ afp.extension }}</td>
            </tr>
            <tr>
                <th>Celular</th>
                <td>{{ afp.celular }}</td>
            </tr>
            <tr>
                <th>Fecha_creacion</th>
                <td>{{ afp.fechaCreacion ? afp.fechaCreacion|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Fecha_actualizacion</th>
                <td>{{ afp.fechaActualizacion ? afp.fechaActualizacion|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="row my-3">
        <div class="col-2">
            <a class="btn btn-primary w-100" href="{{ path('app_afp_index') }}">Volver a la lista</a>
        </div>
    </div>
    <div class="row my-3">
        <div class="col-2">
            <a class="btn btn-primary w-100" href="{{ path('usuarios') }}">Volver a la lista</a>
        </div>
    </div>
    <a href="{{ path('app_afp_index') }}">back to list</a>

    <a href="{{ path('app_afp_edit', {'id': afp.id}) }}">edit</a>

    {{ include('afp/_delete_form.html.twig') }}
{% endblock %}
