{% extends 'base.html.twig' %}

{% block title %}Afp{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('sweetalert2') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('sweetalert2') }}
{% endblock %}
{% block content %}
    <h1>Afp</h1>

    <table class="table table-striped">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ afp.id }}</td>
        </tr>
        <tr>
            <th>Nombre</th>
            <td>{{ afp.nombre }}</td>
        </tr>
        <tr>
            <th>Contacto</th>
            <td>{{ afp.contacto }}</td>
        </tr>
        <tr>
            <th>Telefono</th>
            <td>{{ afp.telefono }}</td>
        </tr>
        <tr>
            <th>Extension</th>
            <td>{{ afp.extension }}</td>
        </tr>
        <tr>
            <th>Celular</th>
            <td>{{ afp.celular }}</td>
        </tr>
        <tr>
            <th>Responsable</th>
            <td>{{ afp.user.nombre ~' '~ afp.user.apellido }}</td>
        </tr>
        <tr>
            <th>Fecha creación</th>
            <td>{{ afp.fechaCreacion ? afp.fechaCreacion|date('d-m-Y') : '' }}</td>
        </tr>
        <tr>
            <th>Fecha actualización</th>
            <td>{{ afp.fechaActualizacion ? afp.fechaActualizacion|date('d-m-Y') : '' }}</td>
        </tr>
        </tbody>
    </table>
    <div class="row my-3">
        <div class="col-2">
            <a class="btn btn-primary w-100" href="{{ path('afp_index') }}">Volver a la lista</a>
        </div>
    </div>
    <div class="row my-3">
        <div class="col-2">
            <a class="btn btn-primary w-100" href="{{ path('afp_edit', {'id': afp.id}) }}">Editar</a>
        </div>
    </div>

    {% if is_granted('ROLE_ADMINISTRADOR') %}
        {{ include('afp/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
