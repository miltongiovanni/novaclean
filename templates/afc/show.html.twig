{% extends 'base.html.twig' %}

{% block title %}Afc{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('sweetalert2') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('sweetalert2') }}
{% endblock %}
{% block content %}
    <h1>Afc</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ afc.id }}</td>
        </tr>
        <tr>
            <th>Nombre</th>
            <td>{{ afc.nombre }}</td>
        </tr>
        <tr>
            <th>Contacto</th>
            <td>{{ afc.contacto }}</td>
        </tr>
        <tr>
            <th>Teléfono</th>
            <td>{{ afc.telefono }}</td>
        </tr>
        <tr>
            <th>Extensión</th>
            <td>{{ afc.extension }}</td>
        </tr>
        <tr>
            <th>Celular</th>
            <td>{{ afc.celular }}</td>
        </tr>
        <tr>
            <th>Responsable</th>
            <td>{{ afc.user.nombre ~' '~ afc.user.apellido }}</td>
        </tr>
        <tr>
            <th>Fecha creación</th>
            <td>{{ afc.fechaCreacion ? afc.fechaCreacion|date('d-m-Y') : '' }}</td>
        </tr>
        <tr>
            <th>Fecha actualización</th>
            <td>{{ afc.fechaActualizacion ? afc.fechaActualizacion|date('d-m-Y') : '' }}</td>
        </tr>
        </tbody>
    </table>
    <div class="row my-3">
        <div class="col-2">
            <a class="btn btn-primary w-100" href="{{ path('afc_index') }}">Volver a la lista</a>
        </div>
        <div class="col-2">
            <a class="btn btn-primary w-100" href="{{ path('afc_edit', {'id': afc.id}) }}">Editar</a>
        </div>
    </div>
    <div class="row my-3">
    </div>


    {% if is_granted('ROLE_ADMINISTRADOR') %}
        {{ include('afc/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
