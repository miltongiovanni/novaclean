                                                </option>
                                                {% for tallaGuantes in tallasGuantes %}
                                                    <option value="{{ tallaGuantes.id }}" {{ personal is defined and personal.tallaGuantes != null and personal.tallaGuantes.id == tallaGuantes.id ? 'selected' : '' }} >{{ tallaGuantes.talla }} </option>
                                                {% endfor %}
                                            </select>
                                        </fieldset>
                                    </div>
