                                                <option value="" disabled {% if action=='insert' %}selected{% endif %}>
                                                    Escoja Afp
                                                </option>
                                                {% for afp in afps %}
                                                    <option value="{{ afp.id }}" {{ personal is defined and personal.afp.id == afp.id ? 'selected' : '' }} >{{ afp.nombre }} </option>
                                                {% endfor %}
                                            </select>
                                        </fieldset>
                                    </div>
                                </div>
                                <div class="col-2 mb-3">
                                    <div class="form-group">
                                        <label for="afc">Afc</label>
                                        <fieldset class="form-group">
                                            <select class="form-select" id="afc" name="afc" required>
                                                <option value="" disabled {% if action=='insert' %}selected{% endif %}>
                                                    Escoja Afc
                                                </option>
                                                {% for afc in afcs %}
                                                    <option value="{{ afc.id }}" {{ personal is defined and personal.afc.id == afc.id ? 'selected' : '' }} >{{ afc.nombre }} </option>
                                                {% endfor %}
                                            </select>
                                        </fieldset>
                                    </div>
                                </div>
                                <div class="col-2 mb-3">
                                    <div class="form-group">
                                        <label for="eps">Eps</label>
                                        <fieldset class="form-group">
                                            <select class="form-select" id="eps" name="eps" required>
                                                <option value="" disabled {% if action=='insert' %}selected{% endif %}>
                                                    Escoja Eps
                                                </option>
                                                {% for eps in epss %}
                                                    <option value="{{ eps.id }}" {{ personal is defined and personal.eps.id == eps.id ? 'selected' : '' }} >{{ eps.nombre }} </option>
                                                {% endfor %}
                                            </select>
                                        </fieldset>
                                    </div>
                                </div>
                                <div class="col-2 mb-3">
                                    <div class="form-group">
                                        <label for="f_examen_ingreso">Fecha examen ingreso</label>
                                        <div class="position-relative has-validation">
                                            <input type="date" class="form-control" id="f_examen_ingreso" name="f_examen_ingreso"
                                                   value="{{ personal.fExamenIngreso is defined and personal.fExamenIngreso != null ? personal.fExamenIngreso|date("Y-m-d") : '' }}">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-2 mb-3">
                                    <div class="form-group">
                                        <label for="f_ingreso">Fecha ingreso</label>
                                        <div class="position-relative has-validation">
                                            <input type="date" class="form-control" id="f_ingreso" name="f_ingreso" required data-parsley-required="true"
                                                   value="{{ personal.fIngreso is defined and personal.fIngreso != null ? personal.fIngreso|date("Y-m-d") : '' }}">
                                        </div>
                                    </div>
                                </div>
