<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-content">
                <div class="card-body">
                    <form class="form form-vertical" method="post" {# data-contrato-slug="{{ contrato.slug }}" #} id="updatePrestamoPersonalForm" data-parsley-validate
                          action="{{ path('prestamo_personal_update', {'id':  id }) }}">
                        <input type="hidden" name="action" id="action" value="{{ action }}">
                        <div class="form-body">
                            {% if action == 'insert' %}
                                <div class="row mb-3">
                                    <div class="col-12 form-group">
                                        <label for="personal_id2" class="form-label">Personal</label>
                                        <select class="form-select select2-personal" style="width: 100%" name="personal_id" id="personal_id" required aria-label="Default select example">
                                            <option value=""></option>
                                        </select>
                                    </div>
                                </div>
                            {% else %}
                                <div class="row mb-3">
                                    <div class="col-12 form-group">
                                        <input type="hidden" name="personal_id" value="{{ prestamo.personal.id }}" id="personal_id_edit">
                                        <label for="personal_name" class="form-label">Personal</label>
                                        <input class="form-control" id="personal_name" value="{{ prestamo.personal.nombre~' '~prestamo.personal.apellido }}" readonly>
                                    </div>
                                </div>
                            {% endif %}
                            <div class="row mb-3">
                                <div class="col-12 form-group">
                                    <label for="fecha_prestamo" class="form-label">Fecha préstamo</label>
                                    <input type="date" class="form-control" name="fecha_prestamo" id="fecha_prestamo" value="{{ prestamo.fechaPrestamo is defined ? prestamo.fechaPrestamo|date('Y-m-d') : '' }}" data-parsley-required="true" required>
                                </div>
                            </div>
                            <div class="row ">
                                <div class="col-12 form-group">
                                    <label for="monto" class="form-label">Monto préstamo</label>
                                    <div class="input-group ">
                                        <span class="input-group-text">$</span>
                                        <input type="text" class="form-control" name="monto" id="monto" value="{{ prestamo.monto ?? '' }}" data-parsley-required="true" required>
                                    </div>

                                </div>
                            </div>
                            <div class="row ">
                                <div class="col-12 form-group">
                                    <label for="cuotas" class="form-label">Número de cuotas</label>
                                    <input type="text" class="form-control" name="cuotas" value="{{ prestamo.cuotas ?? '' }}" data-parsley-required="false" id="cuotas">

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 d-flex justify-content-end mt-3">
                                    <button type="submit" class="btn btn-primary me-1 mb-1">Guardar</button>
                                    <button type="reset" class="btn btn-light-secondary me-1 mb-1">Reiniciar</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

