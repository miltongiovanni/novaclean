<div class="row">
    <div class="col-md-6 col-12">
        <div class="card">
            <div class="card-content">
                <div class="card-body">
                    <form class="form form-vertical" method="post" data-parsley-validate
                          action="{% if parametroNomina.id is defined %}{{ path('parametro_nomina_update', {'id':  parametroNomina.id }) }}{% else %}{{ path('parametro_nomina_update', {'id':  0 }) }}{% endif %}"
                    >
                        <input type="hidden" name="action" id="action" value="{{ action }}">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label for="parametro">Par√°metro</label>
                                        <div class="position-relative has-validation">
                                            <input type="text" class="form-control"
                                                   id="parametro" name="parametro" required
                                                   data-parsley-required="true"
                                                   value="{{ parametroNomina.parametro ?? '' }}">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label for="valor">Valor</label>
                                        <div class="position-relative has-validation">
                                            <input type="text" class="form-control"
                                                   id="valor" name="valor"
                                                   data-parsley-required="true"
                                                   value="{{ parametroNomina.valor ?? '' }}">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 d-flex justify-content-end mt-3">
                                    <button type="submit" class="btn btn-primary me-1 mb-1">Guardar</button>
                                    <button type="reset" class="btn btn-light-secondary me-1 mb-1">Reiniciar</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
