<div class="row">
    <div class="col-md-6 col-12">
        <div class="card">
            <div class="card-content">
                <div class="card-body">
                    <form class="form form-vertical" method="post" data-parsley-validate
                          action="{{ action == 'update' ? path('novedad_nomina_update', {'id':  novedadNomina.id }) :  path('novedad_nomina_update', {'id':  0 }) }}"
                    >
                        <input type="hidden" name="action" id="action" value="{{ action }}">
                        <div class="form-body">
                            <input type="hidden" name="activa" id="activa" value="{{ action == 'update' ? novedadNomina.activa : '1' }}">
                            {% if action == 'insert' %}
                                <div class="row mb-3">
                                    <div class="col-12 form-group">
                                        <label for="personal_id2" class="form-label">Personal</label>
                                        <select class="form-select select2-personal" style="width: 100%" name="personal_id" id="personal_id" required aria-label="Default select example">
                                            <option value=""></option>
                                        </select>
                                    </div>
                                </div>
                            {% else %}
                                <div class="row mb-3">
                                    <div class="col-12 form-group">
                                        <input type="hidden" name="personal_id" value="{{ novedadNomina.personal_id }}" id="personal_id_edit">
                                        <label for="personal_name" class="form-label">Personal</label>
                                        <input class="form-control" id="personal_name" value="{{ novedadNomina.personal_nombre }}" readonly>
                                    </div>
                                </div>
                            {% endif %}
                            <div class="row mb-3">
                                <div class="col-12 form-group">
                                    <label for="tipo_novedad_id" class="form-label">Tipo Novedad Nómina</label>
                                    <select class="form-select" aria-label="Default select example"  name="tipo_novedad_id" id="tipo_novedad_id" data-parsley-required="true" required>
                                        <option value="" selected>Seleccione una opción</option>
                                        {% for tipoNovedadNomina in tiposNovedadNomina %}
                                            <option value="{{ tipoNovedadNomina.id }}" {{ novedadNomina.tipo_novedad_id is defined and novedadNomina.tipo_novedad_id == tipoNovedadNomina.id ? 'selected' : '' }}>{{ tipoNovedadNomina.descripcion }}</option>
                                        {% endfor %} %
                                    </select>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-6 form-group">
                                    <label for="fecha_inicio" class="form-label">Fecha de inicio</label>
                                    <input type="{{ novedadNomina.tipo_novedad_id is defined and (novedadNomina.tipo_novedad_id == 7 or novedadNomina.tipo_novedad_id == 7) ? 'datetime-local' : 'date' }}" class="form-control" name="fecha_inicio" id="fecha_inicio" value="{{ novedadNomina.f_inicio ?? ''}}" data-parsley-required="true" required>
                                </div>
                                <div class="col-6 form-group">
                                    <label for="fecha_fin" class="form-label">Fecha de fin</label>
                                    <input type="{{ novedadNomina.tipo_novedad_id is defined and (novedadNomina.tipo_novedad_id == 7 or novedadNomina.tipo_novedad_id == 7) ? 'datetime-local' : 'date' }}" class="form-control" name="fecha_fin" id="fecha_fin" value="{{ novedadNomina.f_fin ?? ''}}" data-parsley-required="true" required>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label for="observaciones">Observaciones</label>
                                        <div class="position-relative has-validation">
                                            <input type="text" class="form-control" id="observaciones" name="observaciones"
                                                   value="{{ novedadNomina.observaciones ?? '' }}">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 d-flex justify-content-end mt-3">
                                    <button type="submit" class="btn btn-primary me-1 mb-1">Guardar</button>
                                    <button type="reset" class="btn btn-light-secondary me-1 mb-1">Reiniciar</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
