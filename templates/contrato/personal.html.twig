{% extends 'base.html.twig' %}

{% block title %}Personal Contrato{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('datatables') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('datatables') }}
    {{ encore_entry_script_tags('search-personal') }}
{% endblock %}

{% block content %}
    <h2>Personal Contrato {{ contrato.contrato_id }} {{ contrato.cliente }}</h2>
    <div class="row my-3">
        <div class="offset-10 col-2">
            <button class="btn btn-primary w-100" type="button" data-bs-toggle="modal" data-bs-target="#exampleModal">Agregar Personal</button>
        </div>
    </div>

    <table class="table" id="personalContratoDatatable" data-url="{{ path('lista_contrato_personal', {'slug': contrato.slug.toRfc4122()}) }} ">
        <thead>
        <tr>
            <th>Nombre(s)</th>
            <th>Apellido(s)</th>
            <th>Cargo</th>
            <th>Salario</th>
            <th>Bono</th>
            <th>Tipo Nómina</th>
            <th>F ingreso</th>
            <th></th>
        </tr>
        </thead>
    </table>


    <div class="row my-3">
        <div class="col-2">
            <a class="btn btn-primary w-100" href="{{ path('contrato_index') }}">Volver a la lista</a>
        </div>
    </div>
    <div class="row my-3">
        <div class="col-2">
            <a class="btn btn-primary w-100" href="{{ path('contrato_edit', {'slug': contrato.slug.toRfc4122()}) }}">Editar contrato</a>
        </div>
    </div>

    <!-- Modal agregar personal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="row mb-3">
                            <div class="col-12 form-group">
                                <label for="search_personal" class="form-label">Buscar Personal</label>
                                <input type="text" class="form-control" id="search_personal">
                            </div>
                        </div>
                        <div class="row mb-3 d-none">
                            <div class="col-12 form-group">
                                <label for="personal_id" class="form-label">Personal</label>
                                <select class="form-select" id="personal_id" aria-label="Default select example">
                                    {#<option selected>Seleccione una opción</option>#}
                                </select>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-12">
                                <label for="exampleFormControlInput1" class="form-label">Fecha de ingreso</label>
                                <input type="date" class="form-control" id="exampleFormControlInput1">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
